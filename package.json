{
  "name": "airhorn",
  "version": "0.5.0",
  "description": "Cloud Notification Library",
  "main": "./dist/airhorn",
  "types": "./dist/airhorn",
  "repository": "https://github.com/jaredwray/airhorn.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "xo && jest --coverage",
    "clean": "rm -rf ./dist && rm -rf ./coverage && rm -rf ./node_modules",
    "build": "tsc -p ."
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint-config-xo": "^0.40.0",
    "eslint-config-xo-typescript": "^0.50.0",
    "eslint-plugin-jest": "^26.1.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "xo": "^0.48.0"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.52.0",
    "@sendgrid/mail": "^7.6.1",
    "aws-sdk": "^2.1077.0",
    "axios": "^0.26.0",
    "dotenv": "^16.0.0",
    "ecto": "^1.2.0",
    "firebase-admin": "^10.0.2",
    "fs-extra": "^10.0.0",
    "gray-matter": "^4.0.3",
    "twilio": "^3.74.0",
    "winston": "^3.6.0"
  },
  "files": [
    "dist",
    "bin"
  ],
  "xo": {
    "plugins": [
      "jest"
    ],
    "extends": [
      "plugin:jest/recommended"
    ],
    "rules": {
      "@typescript-eslint/naming-convention": 0,
      "@typescript-eslint/object-curly-spacing": 0,
      "no-console": 1,
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never",
          "mjs": "never"
        }
      ]
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
