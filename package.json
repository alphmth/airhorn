{
  "name": "airhorn",
  "version": "0.1.1",
  "description": "Cloud Notification Library",
  "main": "./dist/airhorn",
  "types": "./dist/airhorn",
  "repository": "https://github.com/jaredwray/airhorn.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "xo && jest --coverage",
    "build": "tsc -p ."
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-xo": "^0.39.0",
    "eslint-config-xo-typescript": "^0.47.1",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2",
    "xo": "^0.47.0"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "dotenv": "^10.0.0",
    "ecto": "^1.1.0",
    "fs-extra": "^10.0.0",
    "winston": "^3.3.3"
  },
  "files": [
    "dist",
    "bin"
  ],
  "xo": {
    "rules": {
      "no-console": 1,
      "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "mjs": "never"
      }
      ]
    }
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "testEnvironment": "node"
  }
}
